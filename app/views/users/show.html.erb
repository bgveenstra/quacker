
<div class="row" id="user-info">
  <div class="medium-8 column" id="user-profile-info">
    <strong><h5>Hello <%= @user.username %> </h5></strong>
    <%= cl_image_tag (@user.avatar.url), :width => 100, :height => 100, :crop => :fill, :gravity => :face %>
    <strong>Current City:</strong> <%= @user.current_city %>
    <div class="medium-8">
    <strong>Member since: </strong><%= @user.created_at.strftime("%m/%d/%Y") %><br>
      <% if current_user.id == @user.id %>
      <%= link_to "Edit Profile", edit_user_path(@user) %><br>
      <% end %>
      <div class="followers-following">
        <div class="followers">
          <strong>Followers</strong><br><%= link_to @user.followers.length, followers_user_path(@user), method: 'get' %>
        </div>
        <div class="following">
          <strong>Following</strong><br><%= link_to @user.following.length, following_user_path(@user), method: 'get' %><br>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="medium-3 column", id="search-bar">
  <p>
  <%= form_tag users_path, method: 'get' do %>
  <%= text_field_tag :search, params[:search], placeholder:"Find other users", class: "textfield" %>
  <%= submit_tag "Search", class:"button radius", class: "button radius" %>
  </p>
  <% end %>
  <p> Or browse current users <%= link_to "Users", users_path %></p>
</div>

<div class="tweets">
  <%= render "tweets/index" %>
</div>
