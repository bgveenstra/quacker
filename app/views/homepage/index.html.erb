<div class="row sign-up-form" id="content">
  <div class="medium-3 medium-offset-7 columns">
      <%= form_for @user, url: users_path do |f| %>
        <%= f.label :username %>
        <%= f.text_field :username , placeholder:"Username", class: "textfield" %> <br>
        <%= f.label :email %>
        <%= f.text_field :email ,placeholder: "Email", class: "textfield"%> <br>
        <%= f.label :password %>
        <%= f.password_field :password , placeholder: "Password", class: "textfield" %> <br>
        <%= f.submit "Create Account", class:"button radius", id:"signup"%>
        <p> Already have an account? <%= link_to "Sign In", login_path %></p>
      <% end %>
  </div>
</div>
