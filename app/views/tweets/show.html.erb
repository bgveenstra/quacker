<h1>Show Tweet</h1>
<div class="blog-post">
  <h3><strong><%= link_to @tweet.title, tweet_path(@tweet) %></strong></h3>
  <img class="thumbnail" src="http://placehold.it/100x100">
  <p><%= @tweet.body  %></p>
  <div class="callout">
    <ul class="menu simple">
      <li>Author: <%=link_to @tweet.user.username, user_path(@tweet.user)%></li>
      <li>Latitude: <%= @tweet.latitude %></li>
      <li>Longitude <%= @tweet.longitude %></li>
      <li><%= link_to "Comment!", new_comment_path(@tweet) %>
    </ul>
    <ul class="menu simple">
      <%= link_to "Dislike", dislike_tweet_path(@tweet), class: 'vote', method: :patch, id: @tweet.id %>
      <%= link_to "Like", like_tweet_path(@tweet), class: 'vote', method: :patch, id: @tweet.id %>
      <li>Likes: <%= @tweet.get_likes.size %>
      <li>DisLikes: <%= @tweet.get_dislikes.size %>
      <li><h5>Comments:</h5></li>
      <% @comments.each do |comment| %><br>
      <%= link_to comment.body, comments_path %>Author:<%= link_to comment.user.username, user_path(comment.user) %>
      <%= link_to "Edit Comment", tweet_comment_path(@tweet,comment) %>
      <%= button_to "Delete Comment", destroy_comment_path(@tweet,comment), data: {confirm:'Are you sure you want to delete this comment?'}, method: :delete, class:"button round" %>
      <br>
      <% end %>
    </ul>
  </div>
</div>

<%= link_to "Edit Tweet", edit_tweet_path(@tweet) %>
<%= link_to "Tweets Index", tweets_path %>
<%= link_to "Delete Tweet", destroy_tweet_path(@tweet), method: :delete %>
