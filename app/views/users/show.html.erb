
<div class="row" id="user-info">
  <div class="medium-8 column", id="user-profile-info">
    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRyH3_kvHIBbYJdSO8URLXAwgwBgaxBQZVCB7-Fq_qk3FZRd3I4JA"/>
    <strong><h5>Hello <%= @user.username %> </h5></strong>
      <strong>Current City:</strong> <%= @user.current_city %>
      <div class="medium-8">
    <strong>Member since: </strong><%= @user.created_at.strftime("%m/%d/%Y") %><br>
      <% if current_user == @user %>
        <%= link_to "Edit Profile", edit_user_path(@user) %><br>
      <% end %>
      <div class="followers-following">
        <div class="followers">
          <strong>Followers</strong><br><%= link_to @user.followers.length, followers_user_path(@user), method: 'get' %>
        </div>
        <div class="following">
          <strong>Following</strong><br><%= link_to @user.following.length, following_user_path(@user), method: 'get' %><br>
        </div>
      </div>
    </p>
  </div>
</div>

<div class="medium-3 column", id="search-bar">
  <p>
  <%= form_tag users_path, method: 'get' do %>
  <%= text_field_tag :search, params[:search], placeholder:"Find other users", class: "textfield" %>
  <%= submit_tag "Search", class:"button radius", class: "button radius" %>
  </p>
  <% end %>
  <p> Or browse current users <%= link_to "Users", users_path %></p>
</div>

  <%  if current_user %>
    <% relationship = Relationship.find_by(follower_id: current_user.id, followed_id: @user.id) %>
  <% end %>

  <% if relationship %>
    <%= form_tag(relationship_path(relationship.id), method: :delete) do %>
      <%= submit_tag "Unfollow", class:"button radius" %>
    <% end %>
  <% end %>

  <% if current_user!=@user && !relationship%>
    <% if current_user %>
      <%= form_tag(current_user.active_relationships.build, method: :post) do %>
        <div><%= hidden_field_tag :followed_id, @user.id %></div>
      <%= submit_tag "Follow", class:"button radius" %>
      <% end %>
    <% end %>
  <% end %>

<div class="tweets">
<%= render "tweets/index" %>
</div>
