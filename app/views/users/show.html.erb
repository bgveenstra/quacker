
<div class="row" id="user-info">
  <div class="medium-8 column" id="user-profile-info">
    <strong><h5>Hello <%= @user.username %> </h5></strong>
    <%= cl_image_tag (@user.avatar.url), :width => 100, :height => 100, :crop => :fill, :gravity => :face %><br>
    <%#if @user.current_city %>
      <strong>Current City:</strong><br>
      <%= @user.current_city %>
    <%# end %>
    <div class="medium-8">
    <small>Member since: <%= @user.created_at.strftime("%m/%d/%Y") %></small><br>
      <% if current_user.id == @user.id %>
      <%= link_to "Edit Profile", edit_user_path(@user), class:"button secondary" %><br>
      <% end %>
      <div class="followers-following">
        <div class="followers">
          <strong>Followers</strong><br><%= link_to @user.followers.length, followers_user_path(@user), method: 'get' %>
        </div>
        <div class="following">
          <strong>Following</strong><br><%= link_to @user.following.length, following_user_path(@user), method: 'get' %><br>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="tweets">
    <%= render "tweets/index" %>
  </div>
</div>
