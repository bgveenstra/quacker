<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= @user %>
      <h1><%= @user.username %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Tweets:</b> <%= @user.tweets.count %></span>
    </section>
    <section class="stats">
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
          Following:  <%= link_to user.username, user %>
          <% end %>
          <% @followers.each do |f| %>
          Followers: <%= link_to f.username, f %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>
