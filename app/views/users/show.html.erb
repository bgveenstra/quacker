<div class="row">
  <div class="medium-3 column">
    <p>
    <%= form_tag user_search_path, method: 'get' do %>
    <%= text_field_tag :search, params[:search], placeholder:"Find other users" %>
    <%= submit_tag "Search", class:"button radius" %>
    <p> Or browse current users <%= link_to "Users", users_path %></p>
    </p>
    <% end %>
  </div>
</div>
<div class="row" id="user-info">
  <div class="medium-8 medium-offset-4 columns">
    <h2>Hello <%= @user.username %> </h2><br>
      <strong>Current City:</strong> <%= @user.current_city %>
      <div class="medium-8">
    <strong>Member since: </strong><%= @user.created_at.strftime("%m/%d/%Y") %><br>
      <% if current_user.id == @user.id %>
        <%= link_to "Edit Profile", edit_user_path %><br>
      <% end %>
      <%= button_to "Followers", users_path, method: 'get', class:"button radius" %>
      <%= button_to "Following", users_path, method: 'get', class:"button radius" %><br>
    </p>
  </div>
</div>

<div class="tweets">
  <%= render "tweets/index" %>
</div>
