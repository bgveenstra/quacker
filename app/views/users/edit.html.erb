<div class="row" id="edit-user-info">
  <div class="medium-4 cloumn">
    <%= form_for @user do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username, placeholder:"Username" %> <br>
    <%= f.label :email %>
    <%= f.text_field :email, placeholder:"Email" %> <br>
    <%= f.label :password %>
    <%= f.password_field :password, placeholder:"Password" %> <br>
    <%= f.label :current_city %>
    <%= f.text_field :current_city, placeholder:"Current City" %> <br>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
    <%= f.submit "Save Changes", class: "button radius"%>
    <% end %>
    <%= button_to "Delete Profile", user_path, :method => :delete, class: "button radius delete-button", data: { confirm: "Are you sure? There is no coming back!"} %>
  </div>
</div>
