<div class="tweetrow">
  <!-- <div class="large-6 columns"> -->
    <div class="signup-panel">
      <div class="blog-post">
        <% if @tweet %>
          <% tweet = @tweet %>
        <% end %>
        <li><%= link_to tweet.user.username, user_path(tweet.user)%></li>
        <% if @user.avatar.url == nil %>
        <img class="thumbnail" src="http://placehold.it/100x100">
       <% else %>
        <%= cl_image_tag (tweet.user.avatar.url), :width => 100, :height => 100, :crop => :fill, :gravity => :face %>
        <% end %>
        <p><%= link_to tweet.body, tweet_path(tweet)%></p>
        <div class="callout">
          <ul class="menu simple">
            <li><%= link_to "Like", like_tweet_path(tweet), class: 'vote button info', method: :patch, id: tweet.id %></li>
            <li><%= tweet.get_likes.size %>
            <li><%= link_to "Dislike", dislike_tweet_path(tweet), class: 'vote button alert', method: :patch, id: tweet.id %></li>
            <li><%= tweet.get_dislikes.size %>
          </ul>
          <ul class="menu simple">
            <br>
            <li><h5>Comments:</h5></li>
              <li> <%= link_to "Comment!", new_comment_path(tweet), class:"button radius warning" %></li><br>
            <% tweet.comments.each do |comment| %>
              <li><%= comment.body %></li>
              <% if comment.user==current_user %>
                <%= link_to "Edit ", tweet_comment_path(tweet,comment), class:"button primary" %><%= link_to " Delete", destroy_comment_path(tweet ,comment), class:"button alert", method: :delete %>
              <% end %>
              <br>
            <% end %><br>
          </ul>
        </div>
      </div>
      <% if tweet.user == current_user %>
        <%= link_to "Edit", edit_tweet_path(tweet), class:"button primary" %>
        <%= link_to "Delete", destroy_tweet_path(tweet), method: :delete, class:"button alert" %>
      <% end %>
    </div>
  <!-- </div> -->
</div>

<br> <br>
