<div class="blog-post">
  <% if @tweet %>
    <% tweet = @tweet %>
  <% end %>
  <h3><strong><%= link_to tweet.title, tweet_path(tweet) %></strong></h3>
  <img class="thumbnail" src="http://placehold.it/100x100">
  <p><%= tweet.body %></p>
  <div class="callout">
    <ul class="menu simple">
      <li><%= link_to "Dislike", dislike_tweet_path(tweet), class: 'vote', method: :patch, id: tweet.id %></li>
      <li><%= link_to "Like", like_tweet_path(tweet), class: 'vote', method: :patch, id: tweet.id %></li>
      <li>Likes: <%= tweet.get_likes.size %>
      <li>DisLikes: <%= tweet.get_dislikes.size %>
      <li>Author: <%=link_to tweet.user.username, user_path(tweet.user)%></li>
      <li>Latitude: <%= tweet.latitude %></li>
      <li>Longitude: <%= tweet.longitude %></li>
      <li> <%= link_to "Comment!", new_comment_path(tweet) %></li>
    </ul>

    <ul class="menu simple">
      <li><h5>Comments:</h5></li>
      <% tweet.comments.each do |comment| %>
        <li><br><%= link_to comment.body, comments_path(tweet) %> Author: <%= link_to comment.user.username, user_path(comment.user) %></li>
        <%= link_to "Edit Comment", tweet_comment_path(tweet, comment) %>
      <% end %><br>
    </ul>

  </div>
</div>
<% if current_user == tweet.user %>
  <%= link_to "Edit", edit_tweet_path(tweet) %>
  <%= link_to "Delete", destroy_tweet_path(tweet), method: :delete %>
<% end %>
