
<div class="row" id="user-info">
  <div class="medium-8 column" id="user-profile-info">
    <% if current_user == @user %>
      <h2>Hello,</h2>
    <% end %>
    <h2><strong><%= @user.username %></strong></h2>
    <%= cl_image_tag (@user.avatar.url), :width => 100, :height => 100, :crop => :fill, :gravity => :face %><br>
    <%#if @user.current_city %>
    <% if @user.current_city == nil || @user.current_city.length == 0 %>
      <% else %>
      <strong>Current City:</strong><br>
      <%= @user.current_city %>
      <% end %>
    <%# end %>
    <div class="medium-8">
    <small>Member since: <%= @user.created_at.strftime("%m/%d/%Y") %></small><br>
      <% if current_user.id == @user.id %>
      <%= link_to "Edit Profile", edit_user_path(@user), class:"button secondary" %><br>
      <% end %>
      <div class="followers-following">
        <div class="followers">
          <strong>Followers</strong><br><%= link_to @user.followers.length, followers_user_path(@user), method: 'get' %>
        </div>
        <div class="following">
          <strong>Following</strong><br><%= link_to @user.following.length, following_user_path(@user), method: 'get' %><br>
        </div>
      </div>
    </div>
    <%  if current_user %>
      <% relationship = Relationship.find_by(follower_id: current_user.id, followed_id: @user.id) %>
    <% end %>

    <% if relationship %>
      <%= form_tag(relationship_path(relationship.id), method: :delete) do %>
        <%= submit_tag "Unfollow", class:"button radius" %>
      <% end %>
    <% end %>

    <% if current_user!=@user && !relationship%>
      <% if current_user %>
        <%= form_tag(current_user.active_relationships.build, method: :post) do %>
          <div><%= hidden_field_tag :followed_id, @user.id %></div>
        <%= submit_tag "Follow", class:"button radius" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
  </div>
</div>
<div class="row">
  <div class="tweets">
    <%= render "tweets/index" %>
  </div>
</div>
