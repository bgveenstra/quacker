<hr>

<% if current_user != @user %>
  <% @tweets.each do |tweet| %>
  <%= render 'tweets/show', tweet: tweet %>
  <% end %>
<% end %>

<% if @following %>
  <% @following.each do |f| %>
    <% f.tweets.each do |tweet| %>
      <%= render 'tweets/show', tweet: tweet %>
    <% end %>
  <% end %>
<% end %>

<% if current_user == @user %>
  <%= link_to "Post New Tweet", new_tweet_path(current_user) %>
<% end %>
<%= will_paginate @tweets %>
