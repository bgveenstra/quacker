<h3 class="tweetCommentTitle">Comment on Tweet!</h3>
<div class="col-md-6 col-md-offset-3">
  <h5 class="tweetCommentTitle"> <%=@tweet.title%></h5>
  <div class="form-group">
    <%= form_for @comment do |f| %>
      <div>
        <%= f.text_area :body, placeholder: "Comment Body", size:"60x10", class:"form-control" %>
      </div><br>
      <div>
        <%= f.submit "Submit", class:"button radius tweetCommentButton" %>
      </div>
    <% end %>
  </div>
</div>
